<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mobile.bookseyes">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BookEye"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.mobile.bookseyes.CameraActivity"></activity>
        <activity android:name="org.mobile.bookseyes.CameraParamsActivity" />
        <activity android:name="org.mobile.bookseyes.EditProverbeActivity" />
        <activity android:name="org.mobile.bookseyes.AddProverbeActivity" />
        <activity android:name="org.mobile.bookseyes.ProverbeActivity" />
        <activity android:name="org.mobile.bookseyes.ProverbesListeActivity" />
        <activity android:name="org.mobile.bookseyes.AddBookActivity" />
        <activity android:name="org.mobile.bookseyes.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>